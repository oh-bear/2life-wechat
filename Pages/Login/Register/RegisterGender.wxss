.container {
  width: 100%;
  height: 100%;
}

.container .bg {
  position: relative;
  width: 100%;
}

.container .bg .image {
  width: 100%;
}

.container .bg .text {
  position: absolute;
  top: 160rpx;
  left: 0;
  right: 0;
  font-size: 62rpx;
  color: white;
}

.container .bg .text view {
  width: 500rpx;
  margin: 0 auto;
}

.container .login {
  width: 70%;
  margin: 58rpx auto 0;
}

.container .login .input {
  display: flex;
  display: -webkit-flex;
  width: 90%;
  height: 101rpx;
  padding: 0 5%;
  align-items: center;
  border-bottom: 1px solid #F1F1F1;
}

.container .login .sel {
  border-bottom: 1px solid #2DC3A6;
  color: #2DC3A6;
}

.container .login .warn {
  height: 31rpx;
  padding: 10rpx 5%;
  line-height: 31rpx;
  font-size: 22rpx;
  color: #F43C56;
}

.container .login .description {
  font-size: 22rpx;
  color: #AAAAAA;
}

.container .btn {
  position: absolute;
  bottom: 150rpx;
  font-size: 43rpx;
  color: #2DC3A6;
}