.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.card {
  position: relative;
  width: 558rpx;
  height: 684rpx;
  margin: 16rpx 48rpx 0;
  padding: 148rpx 48rpx 0;
  border-radius: 20px;
  text-align: center;
  color: white;
  background: linear-gradient(to bottom right, #41CE95, #2DC3A6);
}

.card .title {
  font-size: 40rpx;
}

.card .title image {
  width: 50rpx;
  height: 38rpx;
}

.card .question {
  margin-top: 84rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

.card .process {
  position: absolute;
  left: 40%;
  right: 40%;
  bottom: 96rpx;
  font-size: 32rpx;
  text-align: center;
}

.answer {
  margin: 70rpx 48rpx 0;
}

.answer .button {
  height: 104rpx;
  border-radius: 10px;
  text-align: center;
  line-height: 104rpx;
  font-size: 28rpx;
  color: #333333;
  background: #F5F5F5;
}

.answer .button:last-child {
  margin-top: 32rpx;
}

.normal {
  margin-top: 206rpx;
}

.normal .button {
  font-weight: bold;
  color: #2DC3A6;
}

.radar {
  width: 100%;
  height: 550rpx;
  margin-top: 64rpx;
}

.text {
  margin: 178rpx 96rpx 0;
  font-size: 32rpx;
  text-align: center;
  line-height: 44rpx;
}

.button {
  height: 104rpx;
  margin: 148rpx 48rpx 0;
  border-radius: 10px;
  text-align: center;
  line-height: 104rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #2DC3A6;
  background: #F5F5F5;
}